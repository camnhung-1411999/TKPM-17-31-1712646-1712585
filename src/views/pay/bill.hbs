{{#section 'css'}}
<link rel="stylesheet" href="/stylesheets/cart/bill.css">
{{/section}}
<div class="d-flex align-items-center h-100">
    <div class="container text-center py-5">
        <h2 class="mb-0">History</h2>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-8">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Products order</th>
                        <th scope="col">Price</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each bills}}
                    <tr>
                        <td>{{this.code}}</td>
                        <td>
                            {{#each this.products}}
                            {{this.nameproduct}} <br>
                            {{/each}}
                        </td>
                        <td>{{this.sumprice}}</td>
                        <td>{{this.status}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>