<!-- STEPS -->
<section id="Steps" class="steps-section">

    <h2 class="steps-header">
        Status Bill
    </h2>

    <div class="steps-timeline">

        <div class="steps-one">
            <img class="steps-img" src="{{#if confirm}}http://placehold.it/50/0000FF/0000FF{{else}} http://placehold.it/50/3498DB/3498DB{{/if}}" alt="" />
            <h3 class="steps-name">
                Confirm
            </h3>

        </div>

        <div class="steps-two">
            <img class="steps-img" src="{{#if shipping}}http://placehold.it/50/0000FF/0000FF{{else}} http://placehold.it/50/3498DB/3498DB{{/if}}" alt="" />
            <h3 class="steps-name">
                Delivery
            </h3>

        </div>

        <div class="steps-three">
            <img class="steps-img" src="{{#if done}}http://placehold.it/50/0000FF/0000FF{{else}} http://placehold.it/50/3498DB/3498DB{{/if}}" alt="" />
            <h3 class="steps-name">
                Recieved
            </h3>

        </div>

    </div><!-- /.steps-timeline -->

</section>

