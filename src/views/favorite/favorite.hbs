{{#section 'css'}}
<link rel="stylesheet" href="https://mdbootstrap.com/previews/ecommerce-demo/css/mdb-pro.min.css">
<link rel="stylesheet" href="https://mdbootstrap.com/previews/ecommerce-demo/css/mdb.ecommerce.min.css">
<link rel="stylesheet" href="/stylesheets/cart/cart.css">
{{/section}}

{{!-- {{>modal/addtofavoritelist}} --}}
<div class="d-flex align-items-center h-100">
    <div class="container text-center py-5">
        <h3 class="mb-0">Shopping Favorite</h3>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <div class="mb-3">
                <div class="pt-4 wish-list">

                    <h5 class="mb-4 ml-5">Favorite (<span style="font-size: 18px; color: blue; font-weight: 600">{{size}}</span> items)</h5>
                    <form method="post">

                        {{#each list}}
                        <div class="row mb-4">
                            <div class="col-md-5 col-lg-3 col-xl-3">
                                <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
                                    <img class="img-fluid w-100"
                                        src={{this.image}} alt="Sample">
                                    <a href="/products/{{this.idproduct}}/{{this.type}}">
                                        <div class="mask">
                                            <img class="img-fluid w-100"
                                                src={{this.image}}>
                                            <div class="mask rgba-black-slight"></div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-7 col-lg-9 col-xl-9">
                                <div>
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h5>{{this.nameproduct}}</h5>
                                            <p class="mb-3 text-muted text-uppercase small">Shirt - blue</p>
                                            <p class="mb-2 text-muted text-uppercase small">Color: blue</p>
                                            <p class="mb-3 text-muted text-uppercase small">Size: M</p>
                                        </div>
                                        <div>

                                            <div>

                                                <div class="input-group mb-3">
                                                    Number's product: <span class="numpro">{{this.numproduct}}</span>
                                                </div>
                                            </div>
                                            <small id="passwordHelpBlock" class="form-text text-muted text-center">
                                                (Note, 1 piece)
                                            </small>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <button formaction="/favorite/remove/{{this.idproduct}}/{{this.type}}" type="submit" class="card-link-secondary small text-uppercase mr-3"><i
                                                    class="fas fa-trash-alt mr-1"></i> Remove item </button>
                                            <button formaction="/cart/add/{{this.idproduct}}/{{this.type}}"  type="submit" class="card-link-secondary small text-uppercase"><i
                                                    class="fas fa-heart mr-1"></i> Move to wish list </button>
                                        </div>
                                        <p class="mb-0"><span><strong class="summary">{{this.price}}</strong> Ä‘</span></p class="mb-0">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr class="mb-4">
                        {{/each}}
                    </form>

                </div>
            </div>

        </div>
        <!--Grid column-->

    </div>
</div>
